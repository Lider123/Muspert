<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.babaetskv.muspert.ui.fragments.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"/>

        <action
            android:id="@+id/action_splashFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"/>

        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"/>
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.babaetskv.muspert.ui.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"/>

        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"/>
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.babaetskv.muspert.ui.fragments.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.babaetskv.muspert.ui.fragments.MainFragment"
        android:label="Main"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"/>

        <action
            android:id="@+id/action_mainFragment_to_albumsFragment"
            app:destination="@id/albumsFragment"/>

        <action
            android:id="@+id/action_mainFragment_to_tracksFragment"
            app:destination="@id/tracksFragment"/>

        <action
            android:id="@+id/action_mainFragment_to_playerFragment"
            app:destination="@id/playerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.babaetskv.muspert.ui.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/albumsFragment"
        android:name="com.babaetskv.muspert.ui.fragments.AlbumsFragment"
        android:label="Albums"
        tools:layout="@layout/fragment_albums">

        <action
            android:id="@+id/action_albumsFragment_to_tracksFragment"
            app:destination="@id/tracksFragment"/>

        <action
            android:id="@+id/action_albumsFragment_to_playerFragment"
            app:destination="@id/playerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/tracksFragment"
        android:name="com.babaetskv.muspert.ui.fragments.TracksFragment"
        android:label="Tracks"
        tools:layout="@layout/fragment_tracks">

        <argument
            android:name="album"
            app:argType="com.babaetskv.muspert.data.models.Album"/>

        <action
            android:id="@+id/action_tracksFragment_to_playerFragment"
            app:destination="@id/playerFragment"/>
    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.babaetskv.muspert.ui.fragments.PlayerFragment"
        android:label="Player"
        tools:layout="@layout/fragment_player">

        <argument
            android:name="trackId"
            app:argType="long"
            app:defaultValue="-1"/>

        <argument
            android:name="albumId"
            app:argType="long"
            app:defaultValue="-1"/>
    </fragment>
</navigation>